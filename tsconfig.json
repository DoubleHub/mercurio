{
	"compileOnSave": true,
	"compilerOptions": {
		"module": "commonjs",
		"moduleResolution": "node",
		"declaration": true,
		"outDir": "dist",
		"noLib": false,
		"noImplicitAny": false,
		"removeComments": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"inlineSourceMap": true,
		"target": "es5",
		"baseUrl": "src",
		"paths": {
			"@env": [ "env.ts" ],
			"@routes": [ "routes/*" ],
			"@utils": [ "utils/*" ]
		},
		"lib": [
			"dom",
			"es2015",
			"es2016",
			"es2017",
			"es2018",
			"esnext"
		]
	},
	"exclude": [
		"node_modules",
		"dist"
	]
}
